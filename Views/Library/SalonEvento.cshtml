@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Salon de Evento";
}

<main class="h-screen bg-white dark:bg-zinc-800">
    <section class="h-fit w-full flex flex-col items-center gap-12 pt-32 bg-white dark:bg-zinc-800">
        <h2 class="text-center sm:text-5xl text-xl font-bold uppercase dark:text-white">Salon d<strong class="text-amber-700">e Evento</strong></h2>
        
        <div class="w-full flex justify-center md:justify-start items-center md:pl-10">
            <a href="https://api.whatsapp.com/send?phone=72132603" class="py-1 px-2 rounded bg-green-500">
                <i class="fab fa-whatsapp"></i> Reservar
            </a>
        </div>

        <section class="container mx-auto grid grid-cols-responsive place-items-center gap-8 pb-8">
            <div id="bg" class="hidden fixed top-0 left-0 h-screen w-screen bg-white/80 dark:bg-zinc-800/80 z-20"></div>
            <div id="close" class="hidden">
                <i class="fas fa-times fixed top-11 text-white text-lg right-10 md:right-20 cursor-pointer z-[99] p-2 bg-black/30 rounded"></i>
            </div>
            <img src="~/img/evento1.jpg" alt="menu" class="img-click">
            <img src="~/img/evento2.jpg" alt="menu" class="img-click">
            <img src="~/img/evento3.jpg" alt="menu" class="img-click">
            <img src="~/img/evento4.jpg" alt="menu" class="img-click">
            <img src="~/img/evento5.jpg" alt="menu" class="img-click">
        </section>
    </section>
</main>
@section Scripts{
    <script src="~/js/img.js"></script>
}
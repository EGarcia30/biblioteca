@model biblioteca.Models.signin.User;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/img/biblioteca.png">
    <title>Editar | Proyecto Café</title>
    <!--Css y Tailwind-->
    <link rel="stylesheet" href="~/css/output.css">
    <!--Icons-->
    <script src="https://kit.fontawesome.com/be9e926d45.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="min-h-screen flex flex-col bg-white dark:bg-zinc-800">
        <div class="absolute top-0 left-0 flex justify-between items-center md:p-4 p-2 w-full">
            <a asp-action="Users" asp-controller="Admin" class="px-3 py-2 rounded bg-amber-700 hover:bg-amber-600 cursor-pointer text-white" >Volver</a>
            <button id="btnTheme" type="button" class="px-3 py-2 rounded hover:bg-gray-300 dark:hover:bg-gray-700">
                <i id="iconTheme" class="fas fa-sun dark:text-amber-300"></i>
            </button>
        </div>
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
        <div class="bg-white dark:bg-zinc-700 px-6 py-4 rounded shadow-md text-black dark:text-white w-full">
            <h1 class="mb-8 text-3xl text-center font-semibold">Editar Usuario</h1>
            <form asp-controller="Users" asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="UserId">
                <input 
                type="text"
                class="block border focus:outline focus:outline-amber-700 w-full p-3 rounded text-zinc-500"
                asp-for="Names"
                placeholder="Nombres" />
                <span asp-validation-for="Names" class="block text-red-400 pt-2"></span>
                <input 
                    type="text"
                    class="block border focus:outline focus:outline-amber-700 w-full p-3 rounded text-zinc-500"
                    asp-for="Lastnames"
                    placeholder="Apellidos" />
                <span asp-validation-for="Lastnames" class="block text-red-400 pt-2"></span>
                <input 
                    type="text"
                    class="block border focus:outline focus:outline-amber-700 w-full p-3 rounded text-zinc-500"
                    asp-for="Email"
                    placeholder="Email" />
                <span asp-validation-for="Email" class="block text-red-400 pt-2"></span>
                <input 
                    type="text"
                    class="block border focus:outline focus:outline-amber-700 w-full p-3 rounded text-zinc-500"
                    asp-for="Username"
                    placeholder="Nombre de Usuario" />
                <span asp-validation-for="Username" class="block text-red-400 pt-2"></span>
                <input type="hidden" asp-for="PasswordHash">
                <input type="hidden" asp-for="PasswordSalt">
                <label for="birthday" class="text-base text-zinc-400 font-medium md:ml-3 ml-0">Fecha de Nacimiento</label>
                <input 
                    type="date"
                    class="block border focus:outline focus:outline-amber-700 w-full p-3 rounded text-zinc-500"
                    asp-for="BirthDate"
                    placeholder="Fecha de Nacimiento"/>
                <span asp-validation-for="BirthDate" class="block text-red-400 pt-2"></span>
                <input type="hidden" asp-for="Rol">
                <input type="hidden" asp-for="Status">
                <div class="w-full rounded text-center">
                    <span class="block @ViewBag.Color py-2">@ViewBag.Message</span>
                </div>
                <div class="w-full flex flex-wrap gap-4">
                    <button
                        type="submit"
                        class="text-center px-3 py-2 rounded bg-amber-700 hover:bg-amber-600 text-white focus:outline-none my-1"
                    >
                        Guardar
                    </button>
                    <button
                        type="button"
                        class="text-center px-3 py-2 rounded bg-red-500 hover:bg-red-600 text-white focus:outline-none my-1"
                    >
                        Cambiar contraseña
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/theme.js"></script>
    
</body>
</html>